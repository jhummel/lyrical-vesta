{
  "name": "lyrical-vesta",
  "version": "0.1.0",
  "description": "A library to stich together the Lyrical Systems Karaoke API and a Vestaboard via the Local API",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "env $(cat .env | grep -v \"#\" | xargs) npm start",
    "test": "npm run linter && npm run tests",
    "linter": "eslint --ext .ts src/",
    "linter:fix": "eslint --fix --ext .ts src/",
    "tests": "./node_modules/mocha/bin/mocha.js -r ./node_modules/ts-node/register tests/**/*.ts"
  },
  "type": "module",
  "author": "Jason Hummel",
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "chai": "^4.3.6",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "mocha": "^10.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
